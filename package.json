{
  "name": "@tagged/brazillian-values",
  "version": "1.1.0",
  "description": "VitorLuizC/brazilian-values integration for format-tagged",
  "main": "dist/index.js",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@tagged/format": "^1.0.1",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "brazilian-values": "^0.10.1"
  },
  "scripts": {
    "test": "tsc && mocha --recursive",
    "coverage": "tsc && nyc mocha --recursive",
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo .nyc_output",
    "build:clean": "npm run clean && npm run build",
    "prepublish": "npm run build:clean && npm run test",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/format-tagged/brazillian-values.git"
  },
  "keywords": [],
  "author": "Roz <hello@roz.ninja>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/format-tagged/brazillian-values/issues"
  },
  "homepage": "https://github.com/format-tagged/brazillian-values#readme",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && cz --hook || true"
    }
  }
}
